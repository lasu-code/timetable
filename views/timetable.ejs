<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title> <%= title %> </title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/assets/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/assets/maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link href="http://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <script src="/assets/ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="/assets/maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <style>
        .navbar {
            margin-bottom: 0;
            background-color: #4700b3;
            z-index: 9999;
            border: 0;
            font-size: 12px !important;
            line-height: 1.42857143 !important;
            letter-spacing: 4px;
            border-radius: 0;
            font-family: Montserrat, sans-serif;
        }

        .navbar li a,
        .navbar .navbar-brand {
            color: #fff !important;
        }

        .navbar-nav li a:hover,
        .navbar-nav li.active a {
            color: #4700b3 !important;
            background-color: #fff !important;
        }

        .navbar-default .navbar-toggle {
            border-color: transparent;
            color: #fff !important;
        }

        .modal {
            text-align: center;
            padding: 0!important;
        }

        .modal:before {
            content: '';
            display: inline-block;
            height: 100%;
            vertical-align: middle;
            margin-right: -4px;
        }

        .modal-dialog {
            display: inline-block;
            text-align: left;
            vertical-align: middle;
        }
        /* On small screens, set height to 'auto' for the grid */

        @media screen and (max-width: 767px) {
            .row.content {
                height: auto;
            }
            #popUp {
                position: absolute;
                margin: 0 30%;
                margin-top: -70%;
            }
        }

        @media screen and (max-width: 480px) {
            #popUp {
                position: absolute;
                margin: 0 60%;
                margin-top: -120%;
            }
        }

        .logo-small {
            color: #4700b3;
            font-size: 50px;
        }

        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 5px;
            text-align: left;
        }
    </style>
</head>

<body id="myPage">
    <% include ./partials/navbar %>
    <br>
    <br>
    <br>

    <div class="container">
        <div class="row content">
            <%- include('./partials/sidebar', {activeNav: 'timetable'}); %>
            <div class="col-sm-12 col-lg-9">
                <form action="/dashboard/createTimeTable" method="post">
                    <div class="container-fluid">
                        <h2>TimeTable Work Space</h2>
                        <p>Create your table by simply clicking the empty cells:</p>

                        <div class="container-fluid">
                            <% if (classes.length < 1) { %>
                                <h2>No Class in DB</h2>
                            <% } else { %>
                                <table>
                                    <tr>
                                        <th></th>
                                        <th>Class</th>
                                        <th>8:20-9:00</th>
                                        <th>9:00-9:40</th>
                                        <th>9:40-10:20</th>
                                        <th>10:20-10:30</th>
                                        <th>10:30-11:10</th>
                                        <th>11:10-11:50</th>
                                        <th>11:50-12:30</th>
                                        <th>12:30-1:00</th>
                                        <th>1:00-1:40</th>
                                        <th>1:40-2:20</th>
                                    </tr>

                                    <% let fct = 0
                                        for (let d = 0; d < day.length; d++, fct+=8) {
                                            for (let i = 0; i < classes.length; i++) {
                                                itr = fct + (data.length / classes.length * i);
                                    %>
                                    <tr>
                                        <% if (i == 0) { %>
                                            <th rowspan='<%= classes.length %>'> <%= day[d].toUpperCase() %> </th>
                                        <% } %>
                                        <th><%= classes[i].name %></th>

                                        <td id="<%= classes[i].name %>-<%= day[d] %>-t1" onclick="editCell('<%= classes[i].name %>-<%= day[d] %>-t1')">
                                            <%= data[itr].subject %> </td>
                                        <input type="hidden" name="<%= classes[i].name %>-<%= day[d] %>-t1" />

                                        <td id="<%= classes[i].name %>-<%= day[d] %>-t2" onclick="editCell('<%= classes[i].name %>-<%= day[d] %>-t2')">
                                            <%= data[itr+1].subject %> </td>
                                        <input type="hidden" name="<%= classes[i].name %>-<%= day[d] %>-t2" />

                                        <% if (i == 0) { %>
                                            <th rowspan="<%= classes.length %>" >SHORT BREAK</th>
                                            <% } %>

                                        <td id="<%= classes[i].name %>-<%= day[d] %>-t3" onclick="editCell('<%= classes[i].name %>-<%= day[d] %>-t3')">
                                            <%= data[itr+2].subject %> </td>
                                        <input type="hidden" name="<%= classes[i].name %>-<%= day[d] %>-t3" />

                                        <td id="<%= classes[i].name %>-<%= day[d] %>-t4" onclick="editCell('<%= classes[i].name %>-<%= day[d] %>-t4')">
                                            <%= data[itr+3].subject %> </td>
                                        <input type="hidden" name="<%= classes[i].name %>-<%= day[d] %>-t4" />

                                        <td id="<%= classes[i].name %>-<%= day[d] %>-t5" onclick="editCell('<%= classes[i].name %>-<%= day[d] %>-t5')">
                                            <%= data[itr+4].subject %> </td>
                                        <input type="hidden" name="<%= classes[i].name %>-<%= day[d] %>-t5" />

                                        <% if (i == 0) { %>
                                            <th rowspan="<%= classes.length %>" >LONG BREAK</th>
                                        <% } %>

                                        <td id="<%= classes[i].name %>-<%= day[d] %>-t6" onclick="editCell('<%= classes[i].name %>-<%= day[d] %>-t6')">
                                            <%= data[itr+5].subject %> </td>
                                        <input type="hidden" name="<%= classes[i].name %>-<%= day[d] %>-t6" />

                                        <td id="<%= classes[i].name %>-<%= day[d] %>-t7" onclick="editCell('<%= classes[i].name %>-<%= day[d] %>-t7')">
                                            <%= data[itr+6].subject %> </td>
                                        <input type="hidden" name="<%= classes[i].name %>-<%= day[d] %>-t7" />

                                        <td id="<%= classes[i].name %>-<%= day[d] %>-t8" onclick="editCell('<%= classes[i].name %>-<%= day[d] %>-t8')">
                                            <%= data[itr+7].subject %> </td>
                                        <input type="hidden" name="<%= classes[i].name %>-<%= day[d] %>-t8" />
                                    </tr>
                                    <% } } %>
                                </table>
                            <%  } %>
                        </div>
                    </div><br>
                    <button type="button" class="btn btn-primary">Reset</button>
                    <button type="button" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <br>
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Select a subject</h4>
                </div>
                <div class="modal-body">
                    <form action="#" method="get">
                        <input type="hidden" name="subjectValue" id="subjectValue">
                        <select class="form-control input-sm" id="sel1" onchange=handleSubjectSelect(this)>
                        <% for (let i = 0; i < subjects.length; i++)  {  %>
                            <option value="<%= subjects[i].name %>"><%= subjects[i].name %></option>
                        <% } %>
                        </select>
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default" data-dismiss="modal">Submit</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
    <!--<td id="js1Mon2" class="" data-toggle="modal" data-target="#myModal"></td>-->
    <br><br>
